{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "strict": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "lib",
    "example",
    "**/*.test.*",
    "**/__tests__/**"
  ]
}
